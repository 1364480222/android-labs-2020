<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <ImageView
            android:id="@+id/h_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:background="@drawable/my" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/h_back"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_line"
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/user_line"
                android:text="User:Chanlex"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/user_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/user_line"
                android:text="QQ:766698547"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/userid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="userid:1"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/rectangle_border"/>
        <TextView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="sex:male"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/rectangle_border"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="address:HZU"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/rectangle_border"/>
        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="personalized signature:Old friends and old wines are best."
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/rectangle_border"/>
            <Button
                android:id="@+id/returnmainview"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/addborder"
                android:textColor="@drawable/buttonstatus"
                android:text="返回主页"
                android:textSize="22sp">
            </Button>
    </LinearLayout>



</LinearLayout>