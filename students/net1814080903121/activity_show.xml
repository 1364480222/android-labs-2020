<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShownameActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:srcCompat="@drawable/head" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignBottom="@id/input1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@+id/input1"
        android:gravity="center|left"
        android:text="Name："
        android:textSize="18sp" />

    <EditText
        android:id="@id/input1"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignParentRight="true"
        android:hint="请输入你的名字" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_alignTop="@id/input2"
        android:layout_alignBottom="@id/input2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@id/input2"
        android:gravity="center|left"
        android:text="Number：" />

    <EditText
        android:id="@+id/input2"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/input1"
        android:layout_alignParentRight="true"
        android:hint=" 请输入你的电话号码" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignBottom="@+id/input3"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@id/input3"
        android:gravity="center|left"
        android:text="Email：" />

    <EditText
        android:id="@id/input3"
        android:layout_width="339dp"
        android:layout_height="58dp"
        android:layout_below="@id/input2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-4dp"
        android:hint=" 请输入你的邮箱" />


</RelativeLayout>